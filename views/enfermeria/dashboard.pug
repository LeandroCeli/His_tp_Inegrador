extends ../layouts/layout

block content
  h2(class="text-2xl font-bold mb-6 text-gray-800") Panel de Enfermería

  div(class="grid grid-cols-1 md:grid-cols-3 gap-6")
    div(class="bg-white p-6 rounded shadow text-center")
      h3(class="text-lg font-semibold text-gray-700") Evaluaciones registradas
      p(class="text-3xl font-bold text-blue-600 mt-2") 36

    div(class="bg-white p-6 rounded shadow text-center")
      h3(class="text-lg font-semibold text-gray-700") Pacientes en seguimiento
      p(class="text-3xl font-bold text-green-500 mt-2") 14

    div(class="bg-white p-6 rounded shadow text-center")
      h3(class="text-lg font-semibold text-gray-700") Evaluaciones pendientes
      p(class="text-3xl font-bold text-yellow-500 mt-2") 5

  div(class="mt-10")
    h3(class="text-xl font-semibold mb-4") Accesos rápidos

    div(class="flex gap-4 flex-wrap")
      a(href="/enfermeria/evaluar" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700") ➕ Nueva Evaluación
      a(href="/enfermeria/evaluaciones" class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-800") Ver Evaluaciones
